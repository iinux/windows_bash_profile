#!/bin/sh

function valid_ip()
{
    local  ip=$1
    local  stat=1
    if [[ $ip =~ ^[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}$ ]]; then
        OIFS=$IFS
        IFS='.'
        ip=($ip)
        IFS=$OIFS
        [[ ${ip[0]} -le 255 && ${ip[1]} -le 255 \
            && ${ip[2]} -le 255 && ${ip[3]} -le 255 ]]
        stat=$?
    fi
    return $stat
}

if valid_ip $1; then
    curl -s cip.cc/$1
    exit
fi

#ip=`/c/Windows/System32/nslookup $1 114.114.114.114 2>&1 | grep Addresses | awk '{print $2}'`
nslookup=`/c/Windows/System32/nslookup $1 114.114.114.114 2>&1`
ips=`echo "$nslookup" | grep -v 114.114.114.114 | grep -A 10 Address | xargs echo`

if [ "$ips" == "" ]; then
    echo "$nslookup"
    exit
fi

for ip in $ips
do
    if [ "$ip" = "Addresses:" ]; then
        continue
    fi
    if valid_ip $ip; then
        #echo "$ip is valid ip"
        echo ""
    else
        continue
    fi
    curl -s cip.cc/$ip
    echo "--------------------"
done

# getent hosts unix.stackexchange.com
# dig +short unix.stackexchange.com
# host unix.stackexchange.com
